		"@playwright/test": "^1.54.1",
		"@tailwindcss/postcss": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.1.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
